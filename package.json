{
    "name": "Todoist",
    "main": "src/main.js",
    "author": "Ruslan Bekenev <furyinbox@gmail.com>",
    "scripts": {
        "start": "cd src && electron ./src/"
    },
    "build": {
        "appId": "com.krydos.todoist",
        "directories": {
            "app": "src"
        },
        "win": {
            "target": "portable"
        },
        "linux": {
            "target": [
                "deb",
                "rpm",
                "pacman",
                "AppImage",
                "snap"
            ],
            "category": "Utility;Productivity;"
        }
    },
    "devDependencies": {
        "electron": "^6.0.1",
        "electron-builder": "^21.2.0"
    }
}
